<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context="com.example.pradhyumna.triviaquiz.playing">
   <ImageView
       android:layout_width="300dp"
       android:layout_height="200dp"
       android:id="@+id/questionimage"
       android:visibility="invisible"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"
       android:gravity="center"
       />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="35dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:id="@+id/questionCard"
        app:cardPreventCornerOverlap="false"
        >

        <TextView
            android:id="@+id/questiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_pink"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:visibility="visible" />
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="15dp"
        android:layout_height="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/colorGold"></View>
    <View
        android:layout_width="15dp"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/colorGold"></View>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/group"
           android:orientation="vertical"
           android:paddingTop="10dp"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="2"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/txtscore"
                   android:layout_weight="1"
                   android:textColor="#FFFFFF"
                   android:gravity="center_horizontal"
                   android:text="0"
                   android:textSize="36sp"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/txttotalques"
                   android:layout_weight="1"
                   android:textColor="#FFFFFF"
                   android:gravity="center_horizontal"
                   android:text="1/10"
                   android:textSize="36sp"
                   />
           </LinearLayout>

           <ProgressBar
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/progress"
               style="@style/Widget.AppCompat.ProgressBar.Horizontal"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:max="10"

               />
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp"
               >
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Answer A"
               android:textStyle="bold"
               android:id="@+id/btnansa"
               android:theme="@style/MyButton"
               android:textColor="#FFFFFF"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:background="@drawable/button_back"
               android:foreground="?android:attr/selectableItemBackground"
               />
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp"
               >
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Answer B"
               android:textStyle="bold"
               android:id="@+id/btnansb"
               android:theme="@style/MyButton"
               android:textColor="#FFFFFF"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:background="@drawable/button_back"
               android:foreground="?android:attr/selectableItemBackground"
               />
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp"
               >
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Answer C"
               android:textStyle="bold"
               android:id="@+id/btnansc"
               android:theme="@style/MyButton"
               android:textColor="#FFFFFF"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:background="@drawable/button_back"
               android:foreground="?android:attr/selectableItemBackground"
               />
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp"
               >
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Answer D"
               android:textStyle="bold"
               android:id="@+id/btnansd"
               android:theme="@style/MyButton"
               android:textColor="#FFFFFF"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:background="@drawable/button_back"
               android:foreground="?android:attr/selectableItemBackground"
               />
           </android.support.v7.widget.CardView>
       </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
